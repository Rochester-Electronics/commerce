{% requireAdmin %}

{% extends "commerce/_layouts/settings" %}
{% set selectedItem = 'subscriptions/fields' %}

{% set fullPageForm = true %}

{% if not readOnly is defined %}
    {% exit 422 %}
{% endif %}

{% if readOnly %}
    {% set contentNotice = readOnlyNotice() %}
{% endif %}

{% block content %}
    <h2>{{ "Subscription Fields"|t('commerce') }}</h2>

    <input type="hidden" name="action" value="commerce/settings/save-subscription-field-layout">
    {{ redirectInput('commerce/settings/general') }}
    {{ csrfInput() }}

    {% include "_includes/fieldlayoutdesigner" with {
        fieldLayout: craft.app.fields.getLayoutByType('craft\\commerce\\elements\\Subscription')
    } only %}

{% endblock %}
