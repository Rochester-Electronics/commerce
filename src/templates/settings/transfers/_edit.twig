] %}

{% set fullPageForm = not readOnly %}

{% if readOnly %}
    {% set contentNotice = readOnlyNotice() %}
{% endif %}

{% block content %}
    {% if not readOnly %}
    {{ actionInput('commerce/settings/save-transfer-settings') }}
